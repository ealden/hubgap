<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
	version="1.0.0.0">

  <name>HubGap</name>

  <description>
    GitHub on your BlackBerry
  </description>

  <author href="http://ealden.net"
          email="ealden@gmail.com">
    Ealden Esto E. Escanan
  </author>

